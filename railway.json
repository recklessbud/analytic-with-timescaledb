{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile",
    "watchPatterns": [
      "requirements.txt",
      "src/**",
      "railway.json",
      "Dockerfile"
    ]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "startupTimeout": 300,
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 10
  }
}
